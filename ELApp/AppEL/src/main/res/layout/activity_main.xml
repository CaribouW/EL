<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activitys.MainActivity">

    <FrameLayout
        android:id="@+id/root_Frame_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/MainActivityNavigation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#976a6a"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/main_bottom_navigation_content" />
    </android.support.constraint.ConstraintLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="60dp">

        <include layout="@layout/main_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">


            <EditText
                android:layout_width="26dp"></EditText>
            <LinearLayout
                android:id="@+id/main_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/maincolor"
                android:textSize="50sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_weight="0"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/maincolor"
                android:textSize="50sp" />

            <TextView
                android:layout_width="44dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/maincolor"
                android:textSize="50sp" />
                <TextView
                    android:id="@+id/main_month"
                    android:layout_width="53dp"
                    android:layout_height="70dp"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:textColor="@color/maincolor"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="/"
                    android:textColor="@color/maincolor"
                    android:textSize="50sp" />


                <TextView
                    android:id="@+id/main_day"
                    android:layout_width="14dp"
                    android:layout_height="70dp"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:textColor="@color/maincolor"
                    android:textSize="50sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="未完成"
                    android:textColor="@color/maincolor"
                    android:textSize="32sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">
                    <LinearLayout
                        android:id="@+id/readyPart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                <TextView
                    android:layout_width="44dp"
                    android:id="@+id/main-year"
                    android:layout_height="70dp"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:textColor="@color/maincolor"
                    android:textSize="50sp" />

                    </LinearLayout>

                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="已完成"
                    android:textColor="@color/maincolor"
                    android:textSize="32sp" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3">

                    <LinearLayout
                        android:id="@+id/succeededPart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/left_navigation_view_header_layout"
        app:menu="@menu/left_navigation_view_menu"
        tools:ignore="RtlHardcoded">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

