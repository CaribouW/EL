<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/e"
    tools:context="Story.storySecondActivity">

    <TextView
        android:id="@+id/textViewStory2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:text="现在请开始一个\n30分钟的任务~"
        android:textColor="#FFFF"
        android:textSize="40sp"
        android:visibility="visible" />

    <com.moos.library.CircleProgressView
        android:id="@+id/progressView_circleStory2"
        android:layout_width="298dp"
        android:layout_height="323dp"
        android:layout_above="@+id/buttonStory2"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        app:circleBroken="true"
        app:end_color="@color/black"
        app:end_progress="60"
        app:isTracked="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.453"
        app:start_color="@color/maincolor"
        app:start_progress="0"
        app:track_width="50dp" />

    <Button
        android:id="@+id/buttonStory2next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonStory2"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:background="@android:drawable/screen_background_light_transparent"
        android:gravity="center"
        android:text="Next Task!"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="370dp" />

    <Button
        android:id="@+id/buttonStory2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:layout_weight="1"
        android:background="@android:drawable/screen_background_light_transparent"
        android:gravity="center"
        android:text="Have A Good Time!"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="370dp" />

</RelativeLayout>
